{
	"compilerOptions": {
		"outDir": "./tsc-out/",
		"noImplicitAny": true,
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es6",
		"lib": [
			"es2018",
			"dom",
			"dom.iterable"
		],
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "dist/types",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"src"
	]
}
